<%- include ('../partials/header') -%>
<div class="container">
    <div class="row">
<h1 style="text-align: center; margin: 30px;">Edit Comment</h1>
<div style="width: 30%; margin: 0 auto;">
<form action="/cars/<%= car_id%>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <div class="form-group">
    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
    </div>
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Update</button>
    </div>
     </form>
     <a href="/cars">Go Back</a>
</div>
   </div>
</div>

